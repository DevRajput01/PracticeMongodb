{
  "info": {
    "name": "User CRUD API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["users"]
        }
      }
    },
    {
      "name": "Get All Users",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["users"]
        }
      }
    },
    {
      "name": "Get User By ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/users/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["users", ":id"]
        }
      }
    },
    {
      "name": "Update User",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"John Updated\",\n    \"email\": \"john.updated@example.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/users/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["users", ":id"]
        }
      }
    },
    {
      "name": "Delete User",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "http://localhost:5000/users/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["users", ":id"]
        }
      }
    }
  ]
